<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>
    <style name="TranslucentTheme" parent="BaseAppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <!--toggel颜色样式-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/color_2889EA</item>
    </style>

    <style name="Theme.Translucent_NoTitle_FullScreen" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="progress_dialog2" parent="progress_dialog">
        <item name="android:backgroundDimAmount">0</item>
    </style>
    <!--actionbar 最右侧文字按钮 style-->
    <style name="ActionBarRightButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@drawable/back_select_image</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="CustomBannerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/qb_px_150</item>
        <item name="android:background">@color/white</item>
        <item name="autoPlayDuration">4000</item>
        <item name="errorHolder">@drawable/icon_error_rectangle</item>
        <item name="indicatorMargin">6dp</item>
        <item name="indicatorPosition">centerBottom</item>
        <item name="indicatorShape">ring</item>
        <item name="indicatorSpace">8dp</item>
        <item name="scaleType">fitXY</item>
        <item name="isAutoPlay">true</item>
        <item name="placeholder">@drawable/icon_loading_rectangle</item>
        <item name="scrollDuration">1000</item>
        <item name="selectedIndicatorColor">@color/white</item>
        <item name="selectedIndicatorHeight">8dp</item>
        <item name="selectedIndicatorWidth">8dp</item>
        <item name="selectedIndicatorStrokeColor">@color/white</item>
        <item name="unSelectedIndicatorColor">#00000000</item>
        <item name="unSelectedIndicatorHeight">8dp</item>
        <item name="unSelectedIndicatorWidth">8dp</item>
        <item name="unSelectedIndicatorStrokeColor">@color/white</item>
        <item name="cornerRadii">5dp</item>
    </style>
    <!--title 字体大小14  padding 12 20 12 20dp-->
    <style name="CustomFormBaseStyle" parent="FormNormalBaseStyle">
        <item name="fnTitleTextColor">@color/color_333333</item>
        <item name="fnTextColor">@color/color_333333</item>
        <item name="fnTextSize">14</item>
        <item name="fnTitleTextSize">14</item>
        <item name="fnTopPadding">12dp</item>
        <item name="fnBottomPadding">12dp</item>
        <item name="fnLeftPadding">12dp</item>
        <item name="fnRightPadding">12dp</item>
        <item name="fnIndicatorResId">@mipmap/btn_com_h</item>
    </style>
    <style name="popWindow_animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
    <style name="popWindow_animation1">
        <item name="android:windowEnterAnimation">@anim/popipwindow_show</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hide</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_509FFF</item>
        <item name="colorControlActivated">@color/color_509FFF</item>
    </style>
    <!--Button style-->
    <style name="buttonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
