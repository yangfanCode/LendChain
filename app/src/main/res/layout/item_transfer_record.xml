<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transfer_record_llOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_110"
        android:orientation="vertical"
        android:paddingBottom="@dimen/qb_px_10"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15"
        android:paddingTop="@dimen/qb_px_10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_30">

            <TextView
                android:id="@+id/transfer_record_tvStatus"
                style="@style/text262626_16"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/transfer_record_tvCount"
                style="@style/text509FFF_16"
                android:layout_gravity="center_vertical|right" />
        </FrameLayout>

        <TextView
            android:text="asdasdasdsa"
            android:id="@+id/transfer_record_tvOrderCode"
            style="@style/text999999_12"
            android:layout_height="@dimen/qb_px_30"
            android:gravity="center_vertical" />

        <TextView
            android:text="ghghghfgh"
            android:id="@+id/transfer_record_tvTime"
            style="@style/text999999_12"
            android:layout_height="@dimen/qb_px_30"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transfer_record_llOrderAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_EBF4FF"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_13"
        android:paddingLeft="@dimen/qb_px_15"
        android:paddingRight="@dimen/qb_px_15"
        android:paddingTop="@dimen/padding_13"
        android:visibility="gone">

        <TextView
            android:id="@+id/transfer_record_tvAcount"
            style="@style/text999999_12" />
    </LinearLayout>

    <include layout="@layout/row_divider_1px" />
</LinearLayout>