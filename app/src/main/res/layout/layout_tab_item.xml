<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_3"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:textColor="@drawable/tab_selector_tv_color"
        android:textSize="@dimen/text_size_12" />

    <View
        android:id="@+id/v_oval_symbol"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignLeft="@id/imv_image"
        android:layout_alignTop="@id/imv_image"
        android:layout_marginLeft="18dp"
        android:background="@drawable/bg_dd4141_oval_shape"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignLeft="@id/imv_image"
        android:layout_alignTop="@id/imv_image"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/bg_e8003f_radius90_shape"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="13dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone" />

</RelativeLayout>