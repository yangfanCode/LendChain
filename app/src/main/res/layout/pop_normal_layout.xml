<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius5dp_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        style="@style/text509FFF_16"
        android:layout_width="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/padding_100"
        android:paddingBottom="@dimen/padding_30"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20"
        android:paddingTop="@dimen/padding_30" />

    <include layout="@layout/row_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="@dimen/padding_8"
        android:layout_marginTop="@dimen/padding_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/text509FFF_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:layout_width="@dimen/divider_height_1px"
            android:layout_height="match_parent"
            android:background="@color/xc_group_divider" />

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/text509FFF_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/confirm" />
    </LinearLayout>


</LinearLayout>
