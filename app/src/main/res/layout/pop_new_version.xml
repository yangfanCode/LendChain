<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius10dp_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_update_title"
        android:layout_width="match_parent"
        android:src="@mipmap/icon_update_title"
        android:layout_height="80dp" />

    <com.lend.lendchain.widget.SpringBackScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="176dp">
        <TextView
            android:id="@+id/tv_update_content"
            android:layout_margin="@dimen/padding_29"
            android:lineSpacingExtra="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.lend.lendchain.widget.SpringBackScrollView>
    <include layout="@layout/row_divider_1px"/>
    <LinearLayout
        android:id="@+id/lay_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_pop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/cancel"
            style="@style/text595959_16"/>
        <include
            android:id="@+id/tv_update_divider"
            android:layout_width="@dimen/divider_height_1px"
            android:layout_height="match_parent"
            layout="@layout/row_divider_v"/>
        <TextView
            android:id="@+id/tv_ok_pop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            style="@style/text509FFF_16"
            android:text="@string/app_update_text" />
    </LinearLayout>
</LinearLayout>
