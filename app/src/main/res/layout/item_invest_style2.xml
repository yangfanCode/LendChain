<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    android:orientation="vertical">
    <include layout="@layout/row_divider_12h"/>
    <FrameLayout
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_invest_tvType"
                android:layout_width="@dimen/padding_17"
                android:layout_height="@dimen/padding_17"
                android:layout_marginRight="@dimen/padding_5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/item_invest_tvName"
                style="@style/text444444_14"
                android:layout_marginRight="@dimen/padding_5" />

            <TextView
                android:id="@+id/item_invest_tvNickName"
                style="@style/text509FFF_12"
                android:background="@drawable/bg_509fff_border_radiu2"
                android:padding="@dimen/padding_4" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_invest_ivBorrowType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:maxHeight="32dp"
            android:maxWidth="@dimen/padding_78" />
    </FrameLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_2"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_marginLeft="@dimen/padding_15"
        layout="@layout/row_divider_dash" />

    <FrameLayout
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/color_FFBBAD"
                    android:id="@+id/item_invest_tvdailyRate"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/divider_height_1dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" />

                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:layout_marginBottom="@dimen/divider_height_1dp"
                    android:textColor="@color/color_FFBBAD"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <TextView
                android:layout_marginLeft="@dimen/padding_2"
                style="@style/textCCCCCC_12"
                android:text="@string/annualized" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_invest_tvDeadLine"
                style="@style/textCCCCCC_16"
                android:layout_marginBottom="@dimen/padding_5" />

            <TextView
                style="@style/textCCCCCC_12"
                android:text="@string/deadline" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_invest_ivState"
            android:layout_width="@dimen/padding_78"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/icon_full" />
    </FrameLayout>

</LinearLayout>