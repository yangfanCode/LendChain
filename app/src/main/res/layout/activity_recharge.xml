<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.account.RechargeActivity">

    <com.lend.lendchain.widget.BaseTitleBar
        android:id="@+id/base_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:btbBackground="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_slices">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_30"
            android:orientation="vertical">

            <include layout="@layout/row_divider_12h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recharge_ivQRCode"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@color/xc_group_divider"
                    android:padding="@dimen/divider_height_1dp" />

                <TextView
                    style="@style/text999999_12"
                    android:layout_marginTop="@dimen/padding_10"
                    android:text="@string/saoyisao_qrcode_address" />
            </LinearLayout>

            <include layout="@layout/row_divider_12h" />


            <TextView
                android:id="@+id/recharge_tvAddressText"
                style="@style/text262626_12"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_15"
                android:text="@string/recharge_address" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_15">

                <TextView
                    android:id="@+id/recharge_tvAddress"
                    style="@style/text262626_14"
                    android:layout_marginRight="35dp"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/recharge_tvCopy"
                    style="@style/text509FFF_14"
                    android:layout_gravity="right"
                    android:text="@string/copy" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/recharge_llMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/row_divider_1px" />
                <TextView
                    android:id="@+id/recharge_tvMemoText"
                    style="@style/text262626_12"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_15"
                    android:text="@string/withdraw_note_memo" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_15">

                    <TextView
                        android:id="@+id/recharge_tvMemo"
                        style="@style/text262626_14"
                        android:layout_marginRight="35dp"
                        android:ellipsize="end"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/recharge_tvCopyM"
                        style="@style/text509FFF_14"
                        android:layout_gravity="right"
                        android:text="@string/copy" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:background="@color/color_FFDDD7"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_15"
                    android:paddingRight="@dimen/padding_15"
                    android:text="@string/recharge_address_memo_tip"
                    android:textColor="@color/color_FF3D3D"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/recharge_tvTips"
                style="@style/text999999_12"
                android:layout_marginTop="@dimen/padding_30"
                android:lineSpacingExtra="@dimen/padding_2"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_15" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>