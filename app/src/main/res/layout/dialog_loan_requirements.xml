<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_23"
    android:paddingRight="@dimen/padding_23"
    android:paddingBottom="@dimen/padding_23"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            style="@style/text509FFF_16"
            android:layout_gravity="center"
            android:text="@string/borrowing_requirements" />

        <ImageView
            android:id="@+id/dialog_loan_requirement_ivClose"
            android:layout_width="@dimen/padding_18"
            android:layout_height="@dimen/padding_18"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/icon_cha" />
    </FrameLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <com.lend.lendchain.widget.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/padding_7"
            android:paddingBottom="31dp"
            android:text="@string/borrowing_requirements_tips" />
    </ScrollView>
</LinearLayout>