<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical"
    tools:context=".ui.activity.account.LoanAddActivity">

    <com.lend.lendchain.widget.BaseTitleBar
        android:id="@+id/base_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:btbBackground="@color/white" />

    <include layout="@layout/row_divider_12h" />

    <LinearLayout
        android:id="@+id/load_add_llParent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_6"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15"
            android:paddingTop="@dimen/padding_6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text999999_12"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/padding_15"
                    android:text="@string/mortage_coin_price" />

                <TextView
                    android:id="@+id/loan_add_tvMortageCoinPrice"
                    style="@style/text595959_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text999999_12"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/padding_15"
                    android:text="@string/mortgage_count" />

                <TextView
                    android:id="@+id/loan_add_tvMortageCount"
                    style="@style/text595959_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text999999_12"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/padding_15"
                    android:text="@string/mortgage_price_value" />

                <TextView
                    android:id="@+id/loan_add_tvMortagePrize"
                    style="@style/text595959_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text999999_12"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/padding_15"
                    android:text="@string/mortgage_warnning_line" />

                <TextView
                    android:id="@+id/loan_add_tvWarnLine"
                    style="@style/text595959_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text999999_12"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/padding_15"
                    android:text="@string/mortgage_close_line" />

                <TextView
                    android:id="@+id/loan_add_tvCloseLine"
                    style="@style/text595959_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text999999_12"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/padding_15"
                    android:text="@string/mortage_sufficient_rate" />

                <TextView
                    android:id="@+id/loan_add_tvMortageSufficientRate"
                    style="@style/text595959_12" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/row_divider_12h" />

        <TextView
            style="@style/text262626_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_15"
            android:text="@string/additional" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15">

            <com.yangfan.widget.DecimalDigitsEditText
                style="@style/text262626_16"
                android:textColorHint="@color/color_CCCCCC"
                android:id="@+id/loan_add_etAddCount"
                android:layout_width="240dp"
                android:layout_height="@dimen/padding_20"
                android:maxLength="15"
                app:afterDot="6"
                android:inputType="numberDecimal"
                android:background="@null"
                android:theme="@style/MyEditText" />

            <TextView
                android:id="@+id/loan_add_tvAddCode"
                style="@style/text595959_14"
                android:layout_gravity="right" />
        </FrameLayout>

        <include layout="@layout/row_divider_1px" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text595959_12"
                    android:text="@string/after_addition_the_ratio_collateral" />

                <TextView
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:id="@+id/loan_add_tvAddRate"
                    style="@style/text509FFF_12" />
            </LinearLayout>

            <TextView
                android:width="@dimen/round_head_height_60"
                android:layout_height="@dimen/padding_30"
                android:gravity="right|center_vertical"
                android:id="@+id/loan_add_tvGoRecharge"
                style="@style/text509FFF_12"
                android:layout_gravity="center_vertical|right"
                android:text="@string/go_recharge" />
        </FrameLayout>
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/loan_add_btnConfirm"
        android:layout_marginTop="@dimen/padding_30"
        android:background="@drawable/bg_4885ff_gradient_509fff_0174f2_radiu2_selector"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        style="@style/buttonStyle"
        android:text="@string/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
</LinearLayout>