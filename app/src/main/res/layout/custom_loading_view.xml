<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_110"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="@dimen/qb_px_100"
    android:minWidth="@dimen/qb_px_100"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_10">

    <ImageView
        android:id="@+id/custom_toast_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/custom_toast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:maxWidth="@dimen/qb_px_90"
        android:text="正在加载,请稍候."
        android:textColor="@color/color_262626"
        android:textSize="13sp"
        android:visibility="gone" />

</LinearLayout>