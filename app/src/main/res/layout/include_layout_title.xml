<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_45"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lay_title_image_left_back"
        android:layout_width="@dimen/qb_px_45"
        android:layout_height="match_parent"
        android:background="@drawable/back_select_image"
        android:clickable="true">

        <ImageView
            android:id="@+id/imv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_break_selector" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/qb_px_70"
        android:layout_marginRight="@dimen/qb_px_70"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/qb_px_3"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_262626"
                android:textSize="@dimen/text_size_16" />
            <TextView
                android:id="@+id/tv_title_text_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:visibility="gone"
                android:layout_marginTop="@dimen/qb_px_3"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


        
        <ImageView
            android:id="@+id/iv_title_updown"
            android:visibility="gone"
            android:src="@mipmap/btn_pulldown_h"
            android:layout_width="@dimen/qb_px_14"
            android:layout_height="@dimen/qb_px_8" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rel_right_set"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/qb_px_8"
            android:src="@drawable/bg_collection_top_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qb_px_5"
            android:clickable="true"
            android:padding="@dimen/qb_px_8"
            android:src="@mipmap/icon_share_top"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_right_text"
            style="@style/ActionBarRightButtonTextStyle"
            android:layout_gravity="center_vertical|right"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>